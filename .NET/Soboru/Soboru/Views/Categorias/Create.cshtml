@model Soboru.Models.Categoria

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = ViewBag.ControllerName + " - Criar";
}

<main class="main" role="main">
    <div class="wrap clearfix">
        <nav class="breadcrumbs">
            <ul>
                <li><a href="/" title="Home">Home</a></li>
                <li><a href="#">Cadastro</a></li>
                <li>Categoria</li>
            </ul>
        </nav>

        <div class="row">
            <header class="s-title">
                <h1>Criar</h1>
            </header>

            <section class="content full-width">
                <div class="container">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <section>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="f-row">
                                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="full">
                                    @Html.EditorFor(model => model.Nome, null)
                                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </section>

                        
                            <div class="f-row full">
                                <input type="submit" value="Criar" class="button" />
                            </div>
                            <div>
                                @Html.ActionLink("Back to List", "Index")
                            </div>
                        
                    }

                    
                </div>
            </section>
        </div>
    </div>
</main>

@section scripts {
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
    @*<script src="@Url.Content("~/Scripts/bootstrap3-typeahead.min.js")"></script>*@
}
