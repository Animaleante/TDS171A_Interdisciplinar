@model IEnumerable<Soboru.Models.Ingrediente>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Ingredientes";
}

@if (TempData["Message"] != null) {
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3>Ingredientes</h3>
    </div>
    <div class="panel-body">
        <table class="table table-stiped table-hover">
            <thead>
                <tr>
                    <th>
                        @*@Html.DisplayNameFor(model => model.NomeIngrediente)*@
                        Nome
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NomeIngrediente)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.IngredienteId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.IngredienteId }) |
                            @*@Html.ActionLink("Delete", "Delete", new { id = item.IngredienteId })*@
                            <a class="modelItemRemove" href="#" class="btn btn-info" data-toggle="modal" 
                               data-target="#deleteConfirmationModal" data-modelitemid="@item.IngredienteId" data-modelitemname="@item.NomeIngrediente">Remover</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer panel-info">
        <p>
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
        </p>
    </div>
</div>

<div class="modal fade" id="deleteConfirmationModal" tabindex="-1"
     role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-ELTEismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title">
                    Confirmação de exclusão de Ingrediente
                </h4>
            </div>
            <div class="modal-body">
                <p>
                    Você está prestes a remover o ingrediente <span class="modelItemName"></span> do cadastro.
                </p>
                <p>
                    <strong>
                        Você está certo que deseja prosseguir?
                    </strong>
                </p>
                @using (Html.BeginForm("Delete", "Ingrediente", FormMethod.Post, new { @id = "delete-form", role = "form" })) {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="IngredienteId" />
                }
            </div>
            <div class="modal-footer">
                <button id="submit" type="button" class="btn btn-default" onclick="$('#delete-form').submit()">
                    Sim, exclua este produto.
                </button>
                <button type="button" class="btn btn-primary"
                        data-dismiss="modal">
                    Não, não exclua este produto.
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="@Url.Content("~/Scripts/DataTables/jquery.dataTables.min.js")"></script>
<script src="@Url.Content("~/Scripts/DataTables/dataTables.bootstrap.min.js")"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $(".nav li").removeClass("active");
            $("#nav_ingredientes").addClass("active");

            $(".table").dataTable({
                "order": [[1, "asc"]]
            });

            $(".modelItemRemove").click(function (event) {
                $('.modal').find('.modelItemName').text($(event.target).data('modelitemname'));
                $('.modal').find('input[name="IngredienteId"]').val($(event.target).data('modelitemid'));
            });
        });
    </script>
}