@model Soboru.Models.Medida

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = ViewBag.ControllerName + " - Editar";
}

<main class="main" role="main">
    <div class="wrap clearfix">
        <nav class="breadcrumbs">
            <ul>
                <li><a href="/" title="Home">Home</a></li>
                <li><a href="#">Cadastro</a></li>
                <li>Medida</li>
            </ul>
        </nav>

        <div class="row">
            <header class="s-title">
                <h1>Editar</h1>
            </header>

            <section class="content full-width">
                <div class="container">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <section>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Id)
                            @Html.HiddenFor(model => model.CreatedAt)
                            @Html.HiddenFor(model => model.DeletedAt)

                            <div class="f-row">
                                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="full">
                                    @Html.EditorFor(model => model.Nome, null)
                                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="f-row">
                                @Html.LabelFor(model => model.Abreviação, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="full">
                                    @Html.EditorFor(model => model.Abreviação, null)
                                    @Html.ValidationMessageFor(model => model.Abreviação, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="f-row full">
                                <input type="submit" value="Salvar" class="button" />
                                @Html.ActionLink("Cancelar", "Index")
                            </div>
                            
                        </section>
                    }
                </div>
            </section>
        </div>
    </div>
</main>

@section scripts {
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
}
