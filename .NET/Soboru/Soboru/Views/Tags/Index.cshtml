@model IEnumerable<Soboru.Models.Tag>

@{
    ViewBag.Title = "Tags";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Message"] != null) {
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3>Tags</h3>
    </div>
    <div class="panel-body">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NomeTag)
                </th>
                <th>Actions</th>
            </tr>

            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeTag)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.TagId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.TagId }) |
                        <a href="#" class="modelItemRemove" data-toggle="modal"
                           data-target="#deleteConfirmationModal" data-modelitemid="@item.TagId" data-modelitemname="@item.NomeTag">Remover</a>
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="panel-footer panel-info">
        <p>
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
        </p>
    </div>
</div>

@Html.Partial("~/Views/Shared/_DeleteModal.cshtml")

@section Scripts {
    <script src="@Url.Content("~/Scripts/DataTables/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/Scripts/DataTables/dataTables.bootstrap.min.js")"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            setActivePage("nav_tags");

            $(".table").dataTable({
                "order": [[1, "asc"]]
            });

            registerDeleteModalInfo();
        });
    </script>
}
