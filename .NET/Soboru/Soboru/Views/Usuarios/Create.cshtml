@model Soboru.Models.Usuario

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = ViewBag.ControllerName + " - Criar";
}

<main class="main" role="main">
    <div class="wrap clearfix">
        <nav class="breadcrumbs">
            <ul>
                <li><a href="/" title="Home">Home</a></li>
                <li><a href="#">Cadastro</a></li>
                <li>Usuario</li>
            </ul>
        </nav>

        <div class="row">
            <header class="s-title">
                <h1>Criar</h1>
            </header>

            <section class="content full-width">
                <div class="container">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <section>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="f-row">
                                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="full">
                                    @Html.EditorFor(model => model.Nome, null)
                                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="f-row">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="full">
                                    @Html.EditorFor(model => model.Email, null)
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="f-row">
                                @Html.LabelFor(model => model.Senha, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="full">
                                    @Html.EditorFor(model => model.Senha, null)
                                    @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="f-row">
                                Confirmar Senha
                                <div class="full">
                                    @Html.EditorFor(model => model.Senha, null)
                                </div>
                            </div>

                            <div class="f-row">
                                @Html.LabelFor(model => model.Nasc, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="full">
                                    @Html.EditorFor(model => model.Nasc, null)
                                    @Html.ValidationMessageFor(model => model.Nasc, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="f-row">
                                @Html.LabelFor(model => model.Sexo, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="full">
                                    @Html.DropDownListFor(model => model.Sexo,
                                   new SelectList(new List<Object>{
                                     new {value = 1, text = "Masculino"},
                                     new {value = 2, text = "Feminino"}
                                }, "value", "text", 0))
                                </div>
                            </div>

                        </section>

                        <div class="f-row full">
                            <input type="submit" value="Criar" class="button" />
                            @Html.ActionLink("Cancelar", "Index")
                        </div>
                    }

                    @*<div>
                            @Html.ActionLink("Back to List", "Index")
                        </div>*@
                </div>
            </section>
        </div>
    </div>
</main>

@section scripts {
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
    @*<script src="@Url.Content("~/Scripts/bootstrap3-typeahead.min.js")"></script>*@
}
